    "/api/v1/auth/daftar": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Register new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "email", "password", "phone_number"],
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Nama lengkap user",
                    "minLength": 3,
                    "maxLength": 50,
                    "example": "John Doe"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Email valid user",
                    "example": "user@example.com"
                  },
                  "password": {
                    "type": "string",
                    "minLength": 6,
                    "description": "Password minimal 6 karakter",
                    "example": "password123"
                  },
                  "phone_number": {
                    "type": "string",
                    "description": "Nomor telepon Indonesia (format: 08xxxxxxxxxx)",
                    "pattern": "^08[0-9]{8,13}$",
                    "example": "081234567890"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User registered successfully"
          }
        }
      }
    },
    "/api/v1/auth/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Login user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["emailOrPhone", "password"],
                "properties": {
                  "emailOrPhone": {
                    "type": "string",
                    "description": "Email atau nomor telepon user",
                    "example": "user@example.com atau 081234567890"
                  },
                  "password": {
                    "type": "string",
                    "description": "Password user",
                    "example": "password123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login berhasil"
          }
        }
      }
    },
    "/api/v1/auth/user": {
      "get": {
        "tags": ["Authentication"],
