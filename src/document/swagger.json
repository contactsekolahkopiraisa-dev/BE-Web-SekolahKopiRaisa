        "tags": ["Orders"],
        "summary": "Get all orders (admin)",
        "security": [{ "cookieAuth": [] }],
        "responses": {
          "200": {
            "description": "Orders retrieved successfully"
          }
        }
      },
      "post": {
        "tags": ["Orders"],
        "summary": "Create new order",
        "security": [{ "cookieAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "items": { "type": "array", "MinItems": 1,
                    "items": {
                      "type": "object",
                      "properties": {
                        "products_id": { "type": "integer", "example": "17" },
                        "quantity": { "type": "integer", "example": 1 },
                        "price": { "type": "number", "example": 29000 }
                      }
                    }
                  },
                  "shippingAddress": { "type": "string", "example": 139 },
                  "paymentMethod": { "type": "string", "example": "BANK_TRANSFER" },
                  "address": { "type": "string", "example": "Jl. Kopi No. 12, Jember" },
                  "cost": { "type": "number", "example": 30000 },
                  "shipping_name": { "type": "string", "example": "J&T Express" },
                  "shipping_code": { "type": "string", "example": "jnt" },
                  "shipping_service": { "type": "string", "example": "darat" },
                  "destination_id": { "type": "integer", "example": 31300 },
                  "destination_province": { "type": "string", "example": "Jawa Timur" },
                  "destination_city": { "type": "string", "example": "Jember" },
                  "destination_district": { "type": "string", "example": "Wirolegi" },
                  "destination_subdistrict": { "type": "string", "example": "Sumbersari" },
                  "destination_pos_code": { "type": "string", "example": "68124" }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Order created successfully"
          }
        }
      }
    },
    "/api/v1/order/umkm/history": {
      "get": {
        "tags": ["Order UMKM"],
        "summary": "Get riwayat pesanan UMKM (UMKM only)",
        "description": "UMKM dapat melihat riwayat semua pesanan yang mengandung produk mereka dengan filter status opsional.",
        "security": [{ "cookieAuth": [] }],
        "parameters": [
          {
            "in": "query",
            "name": "status",
            "schema": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["PENDING", "PROCESSING", "SHIPPED", "DELIVERED", "CANCELED"]
              }
            },
            "description": "Filter berdasarkan status pesanan (bisa multiple)",
            "example": ["PROCESSING", "SHIPPED"]
          }
        ],
        "responses": {
          "200": {
            "description": "Riwayat pesanan UMKM berhasil diambil"
          },
          "403": {
            "description": "Akses ditolak! Endpoint ini hanya untuk UMKM."
          },
          "404": {
            "description": "Profil partner tidak ditemukan"
          },
          "500": {
            "description": "Terjadi kesalahan di server"
          }
        }
      }
    },
    "/api/v1/order/umkm/{id}/detail": {
      "get": {
        "tags": ["Order UMKM"],
        "summary": "Get detail pesanan UMKM by ID (UMKM only)",
        "description": "UMKM dapat melihat detail pesanan spesifik yang mengandung produk mereka berdasarkan ID pesanan.",
        "security": [{ "cookieAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID pesanan"
          }
        ],
        "responses": {
          "200": {
            "description": "Detail pesanan UMKM berhasil diambil",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Detail pesanan UMKM berhasil diambil!"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "orderId": { "type": "integer", "example": 123 },
                        "statusOrder": { "type": "string", "example": "PROCESSING" },
                        "createdAt": { "type": "string", "format": "date-time" },
                        "updatedAt": { "type": "string", "format": "date-time" },
                        "customerName": { "type": "string", "example": "John Doe" },
                        "customerPhone": { "type": "string", "example": "081234567890" },
                        "shippingAddress": {
                          "type": "object",
                          "properties": {
                            "address": { "type": "string" },
                            "province": { "type": "string" },
                            "city": { "type": "string" },
                            "district": { "type": "string" },
                            "subdistrict": { "type": "string" },
                            "zipCode": { "type": "string" }
                          }
                        },
                        "items": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "productId": { "type": "integer" },
                              "productImage": { "type": "string" },
                              "name": { "type": "string" },
                              "quantity": { "type": "integer" },
                              "price": { "type": "number" },
                              "subtotal": { "type": "number" },
                              "note": { "type": "string" }
                            }
                          }
                        },
                        "payment": {
                          "type": "object",
                          "properties": {
                            "method": { "type": "string" },
                            "status": { "type": "string" },
                            "partnerAmount": { 
                              "type": "number", 
