    "description": "API untuk Backend Web Sekolah Kopi Raisa - E-commerce dan Management System \n\nBila pada example value terdapat schema, jangan lupa untuk baca deskripsi schema"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local Development Server"
    },
    {
      "url": "https://be-web-sekolah-kopi-raisa.vercel.app",
      "description": "Vercel Production Server"
    },
    {
      "url": "https://sekolah-kopi-raisa.up.railway.app",
      "description": "Railway Production Server"
    }
  ],

  "tags": [
    { "name": "default" },
    { "name": "Authentication" },
    { "name": "News" },
    { "name": "Products" },
    { "name": "Partners" },
    { "name": "Cart" },
    { "name": "Orders" },
    { "name": "Company" },
    { "name": "Order UMKM" }
  ],

  "components": {
    "securitySchemes": {
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "token"
      }
    }
  },
  "paths": {
    "/": {
      "get": {
        "summary": "Root endpoint",
        "responses": {
          "200": {
            "description": "Welcome message"
          }
        }
      }
    },
    "/api/v1/auth/daftar": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Register new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "email", "password", "phone_number"],
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Nama lengkap user",
                    "minLength": 3,
                    "maxLength": 50,
                    "example": "John Doe"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Email valid user",
                    "example": "user@example.com"
                  },
                  "password": {
                    "type": "string",
                    "minLength": 6,
                    "description": "Password minimal 6 karakter",
                    "example": "password123"
                  },
                  "phone_number": {
                    "type": "string",
                    "description": "Nomor telepon Indonesia (format: 08xxxxxxxxxx)",
                    "pattern": "^08[0-9]{8,13}$",
                    "example": "081234567890"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User registered successfully"
          }
        }
      }
    },
    "/api/v1/auth/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Login user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["emailOrPhone", "password"],
                "properties": {
                  "emailOrPhone": {
                    "type": "string",
                    "description": "Email atau nomor telepon user",
                    "example": "3rd.hikam074@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "description": "Password user",
                    "example": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login berhasil"
          }
        }
      }
    },
    "/api/v1/auth/user": {
      "get": {
        "tags": ["Authentication"],
        "summary": "Get current user profile",
        "security": [{ "cookieAuth": [] }],
        "responses": {
          "200": {
            "description": "User profile retrieved successfully"
          }
        }
      },
      "put": {
        "tags": ["Authentication"],
        "summary": "Update user profile",
        "security": [{ "cookieAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": ["name", "phone_number"],
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Nama lengkap user",
                    "minLength": 3,
                    "maxLength": 50,
                    "example": "John Doe Updated"
                  },
                  "phone_number": {
                    "type": "string",
                    "description": "Nomor telepon Indonesia (format: 08xxxxxxxxxx)",
                    "pattern": "^08[0-9]{8,13}$",
                    "example": "081234567890"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Email user (optional untuk update)",
                    "example": "newemail@example.com"
                  },
                  "media": {
                    "type": "string",
                    "format": "binary",
                    "description": "Profile image file (optional)"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Profile updated successfully"
          }
        }
      }
    },
    "/api/v1/auth/reset-password-request": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Request password reset",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email"],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Email address untuk reset password",
                    "example": "user@example.com"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Password reset request sent"
          },
          "500": {
            "description": "Failed to send reset password email"
          }
        }
      }
    },
    "/api/v1/auth/reset-password": {
      "put": {
        "tags": ["Authentication"],
        "summary": "Reset password",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["token", "newPassword"],
                "properties": {
                  "token": {
                    "type": "string",
                    "description": "Reset password token from email",
                    "example": "reset_token_here"
                  },
                  "newPassword": {
                    "type": "string",
                    "minLength": 6,
                    "description": "New password (minimum 6 characters)",
                    "example": "newpassword123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Password reset successfully"
          },
          "400": {
            "description": "Invalid or expired token"
          }
        }
      }
    },
    "/api/v1/auth/google": {
      "get": {
        "tags": ["Authentication"],
