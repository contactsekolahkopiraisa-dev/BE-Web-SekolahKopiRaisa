model VerifikasiUMKM {
  id_umkm          Int       @id @default(autoincrement())
  id_user          Int
  nama_umkm        String    @db.VarChar(150)
  ktp              String?   @db.VarChar(16)
  surat_izin_edar String[]   @db.Text
  status_verifikasi VerificationStatus @default(Pending)
  alasan_penolakan String?   @db.Text

  User             User      @relation(fields: [id_user], references: [id], onDelete: NoAction, onUpdate: NoAction)
  
  addresses        Address[]

  @@map("verifikasi_umkm")
}

model Address {
  id_address   Int             @id @default(autoincrement())
  id_umkm      Int
  id_desa      Int             // FK ke tabel Desa
  alamat       String          @db.VarChar(255)  // Detail alamat (jalan, nomor rumah)
  kode_pos    String?         @db.VarChar(10)   // Kode pos
  
  verifikasiUMKM VerifikasiUMKM @relation(fields: [id_umkm], references: [id_umkm])
  desa           Desa           @relation(fields: [id_desa], references: [id_desa])
  
  @@map("address")
}

model Profile {
  id_profile Int  @id @default(autoincrement())
  id_user    Int

  user       User @relation(fields: [id_user], references: [id])

  @@map("profile")
}

model FinancialReport {
  id_financialreport Int      @id @default(autoincrement())
  id_user            Int
  periode            String   @db.VarChar(50)
  report_date        DateTime @db.Date
  description        String?
  income             Int      // Total pemasukan

  User               User     @relation(fields: [id_user], references: [id])
  pengeluaran       Pengeluaran[]  // ← TAMBAHAN: One-to-many ke Pengeluaran
  financialreportpengeluaran FinancialReportPengeluaran[]
  financialreportpemasukan   FinancialReportPemasukan[]

  @@map("financial_report")
}

model Pengeluaran {
  id_pengeluaran      Int              @id @default(autoincrement())
  id_financialreport  Int
  id_user             Int
  tanggal             DateTime         @db.Date
  jumlah_pengeluaran  Int
  keterangan          String?          @db.Text

  financialReport     FinancialReport  @relation(fields: [id_financialreport], references: [id_financialreport], onDelete: Cascade)
  user                User               @relation(fields: [id_user], references: [id])

  @@map("pengeluaran")
}

model SalesReport {
  id_salesreport      Int      @id @default(autoincrement())
  id_order            Int
  id_order_item       Int      // ✅ Tambah: untuk track item spesifik
  id_product          Int
  partner_id          Int
  quantity            Int
  price_per_unit      Int      // Harga saat transaksi
  subtotal            Int
  tanggal_transaksi   DateTime @default(now())
  created_at          DateTime @default(now())

  order       Order     @relation(fields: [id_order], references: [id])
  orderItem   OrderItem @relation(fields: [id_order_item], references: [id])
  product     Product   @relation(fields: [id_product], references: [id])
  partner     Partner   @relation(fields: [partner_id], references: [id])

  @@map("sales_report")
}

model FinancialReportPengeluaran {
  id_financialreportpengeluaran Int              @id @default(autoincrement())
  id_financialreport            Int
  id_transaksi                  Int

  financialReport               FinancialReport  @relation(fields: [id_financialreport], references: [id_financialreport])
  transaction                   Transaction      @relation("TransactionPengeluaran", fields: [id_transaksi], references: [id])

  @@map("financial_report_pengeluaran")
}

model FinancialReportPemasukan {
  id_financialreportpemasukan   Int              @id @default(autoincrement())
  id_financialreport            Int
  id_transaksi                  Int

  financialReport               FinancialReport  @relation(fields: [id_financialreport], references: [id_financialreport])
  transaction                   Transaction      @relation("TransactionPemasukan", fields: [id_transaksi], references: [id])

  @@map("financial_report_pemasukan")
}

// DI DB ADA TABEL detail_transaction
// tabel detail ndak kepakai
model DetailTransaction {
  id_detail      Int         @id @default(autoincrement())
  id_transaction Int
  id_product     Int
  jumlah_produk  Int
  subtotal       Int
  
  Transaction    Transaction @relation(fields: [id_transaction], references: [id])
  Product        Product     @relation(fields: [id_product], references: [id])

  @@map("detail_transaction")
}

// tabel harga untuk menyimpan riwayat harga produk (belum kepakai)
// bisa dikembangkan buat pergantian harga produk, promo, diskon, dll
model Harga {
  id_harga        Int         @id @default(autoincrement())
  id_product      Int         
  harga           Int
  status          StatusHarga @default(Aktif)
  waktu_mulai     DateTime    @default(now())
  waktu_berakhir  DateTime?
  created_at      DateTime    @default(now())

  product         Product     @relation(fields: [id_product], references: [id])

  @@map("harga")
}

model Provinsi {
  id_provinsi   Int          @id  // 35 untuk Jawa Timur
  nama_provinsi String       @db.VarChar(50)
  
  kabupatens    Kabupaten[]
  
  @@map("provinsi")
}

model Kabupaten {
  id_kabupaten   Int          @id  // 3509 untuk Jember, dst
  id_provinsi    Int
  nama_kabupaten String       @db.VarChar(50)
  
  provinsi       Provinsi     @relation(fields: [id_provinsi], references: [id_provinsi])
  kecamatans     Kecamatan[]
  
  @@map("kabupaten")
}

model Kecamatan {
  id_kecamatan   Int          @id  // 350901 untuk Jombang, dst
  id_kabupaten   Int
  nama_kecamatan String       @db.VarChar(50)
  
  kabupaten      Kabupaten    @relation(fields: [id_kabupaten], references: [id_kabupaten])
  desas          Desa[]
  
  @@map("kecamatan")
}

model Desa {
  id_desa      Int          @id  // unique code
  id_kecamatan Int
  nama_desa    String       @db.VarChar(50)
  
  kecamatan    Kecamatan    @relation(fields: [id_kecamatan], references: [id_kecamatan])
  addresses    Address[]
  
  @@map("desa")
}

enum StatusHarga {
  Aktif
  Nonaktif
  Promo
}

enum VerificationStatus {
  Pending
  Verified
  Rejected
}

enum Role {
  UMKM
}


